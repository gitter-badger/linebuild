<?xml version="1.0" encoding="UTF-8"?>

<phpunit
        bootstrap="./test/Bootstrap.php" colors="true">

    <testsuites>
        <testsuite name="ZFApigility Module Tests">
            <directory>./test</directory>
        </testsuite>
    </testsuites>
    
    <logging>
		<log 
			type="coverage-html" 
			target="test/log/report"
			charset="UTF-8"
			yui="true" 
			highlight="true" 
			lowUpperBound="35" 
			highUpperBound="70" />
		<log 
			type="testdox-html" 
			target="test/log/testdox.html" />
	</logging>
</phpunit>